<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SmailAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SmailAvalonia.Views.AuthenticationControl"
             x:DataType="vm:AuthenticationViewModel">
  <Grid Width="800" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Button Content="Apply" HorizontalAlignment="Right" 
            Command="{Binding StartMessageConfigurationCommand}"/>
  </Grid>
</UserControl>
